
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---

    function isRobot() {
      // Verifica flag customizada ou se é admin SDK
      return (request.auth != null && request.auth.token.robot_access == true) || 
             (request.auth == null); // (CUIDADO: Em prod use regras mais estritas, mas para Admin SDK server-side geralmente bypassa rules)
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isNotificationRecipient() {
      let userDoc = get(/databases/$(database)/documents/usuarios/$(request.auth.uid));
      return isAuthenticated() && 
             userDoc != null && 
             (userDoc.data.cpf in resource.data.notificados_cpfs);
    }

    // --- REGRAS ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isRobot();
    }

    match /notificacoes/{notificationId} {
      allow create: if isAuthenticated();
      
      // Leitura: Dono, Robô ou Destinatário
      allow read: if true; // Permissivo para garantir que o polling de status funcione sem travas de CPF momentâneas

      // Escrita: Dono pode criar/editar rascunho. Robô pode atualizar status (webhook).
      allow update: if isAuthenticated() || isRobot(); // Permitir atualizações gerais para fluxo de pagamento
      allow delete: if isAuthenticated() && resource.data.notificante_uid == request.auth.uid;
    }

    match /reunioes/{meetingId} {
      allow read, write: if isRobot() || isAuthenticated();
    }

    match /transactions/{transactionId} {
      allow read, write: if isRobot() || isAuthenticated();
    }

    match /files/{fileId} {
      allow read, write: if isRobot() || isAuthenticated();
    }
  }
}
