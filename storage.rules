
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- FUNÇÕES AUXILIARES ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper para buscar a notificação no Firestore e verificar permissões
    function getNotification(id) {
      return firestore.get(/databases/(default)/documents/notificacoes/$(id));
    }
    
    // Helper para buscar o CPF do usuário logado
    function getUserCpf() {
       return firestore.get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.cpf;
    }

    // --- REGRAS ---

    // 1. FOTO DE PERFIL
    match /fotos_perfil/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // 2. PASTA DA NOTIFICAÇÃO (PDF Assinado e Evidências)
    // A regra {allPaths=**} aplica a segurança para QUALQUER arquivo dentro desta pasta
    match /notificacoes/{notificationId}/{allPaths=**} {
      // Upload: Permitido para usuários autenticados
      allow write: if isAuthenticated();
      
      // Leitura Segura:
      // Verifica no Firestore se o usuário é o DONO ou o DESTINATÁRIO (via CPF)
      allow read: if isAuthenticated() && (
        getNotification(notificationId).data.notificante_uid == request.auth.uid ||
        getUserCpf() in getNotification(notificationId).data.notificados_cpfs
      );
    }
    
    // 3. ARQUIVOS PESSOAIS (File Manager)
    match /user_files/{userId}/{allPaths=**} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
