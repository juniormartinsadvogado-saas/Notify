
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---

    // Verifica se o usuário está logado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Verifica se o UID do usuário bate com o solicitado
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Busca o CPF do usuário logado na coleção 'usuarios'
    // Isso é usado para saber se o usuário pode ler uma notificação recebida
    function getUserCpf() {
       return get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.cpf;
    }

    // --- REGRAS DAS COLEÇÕES ---

    // 1. USUÁRIOS
    match /usuarios/{userId} {
      allow read, write: if isOwner(userId);
    }

    // 2. NOTIFICAÇÕES
    match /notificacoes/{notificationId} {
      // CRIAÇÃO: Permitido se o campo 'notificante_uid' for igual ao ID do usuário
      allow create: if isAuthenticated() && request.resource.data.notificante_uid == request.auth.uid;
      
      // ATUALIZAÇÃO/DELEÇÃO: Apenas o dono (quem criou) pode alterar ou apagar
      allow update, delete: if isAuthenticated() && resource.data.notificante_uid == request.auth.uid;
      
      // LEITURA (Lógica Híbrida):
      // Permite ler se:
      // A) O usuário é o dono (Remetente)
      // OU
      // B) O CPF do usuário está na lista de destinatários (notificados_cpfs)
      allow read: if isAuthenticated() && (
        resource.data.notificante_uid == request.auth.uid ||
        (getUserCpf() in resource.data.notificados_cpfs)
      );
    }

    // 3. REUNIÕES
    match /reunioes/{meetingId} {
      // Leitura e escrita permitida para usuários autenticados
      allow read, write: if isAuthenticated();
    }

    // 4. TRANSAÇÕES
    match /transactions/{transactionId} {
      allow read, write: if isAuthenticated();
    }

    // 5. ARQUIVOS PESSOAIS (File Manager)
    match /files/{fileId} {
      allow read, write: if isAuthenticated();
    }
  }
}
