
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---

    function isRobot() {
      return request.auth != null && request.auth.token.robot_access == true;
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // LÓGICA DE OURO: Verifica se o CPF do usuário logado está na lista de notificados
    function isNotificationRecipient() {
      let userDoc = get(/databases/$(database)/documents/usuarios/$(request.auth.uid));
      return isAuthenticated() && 
             userDoc != null && 
             (userDoc.data.cpf in resource.data.notificados_cpfs);
    }

    // --- REGRAS ---

    match /usuarios/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isRobot();
    }

    match /notificacoes/{notificationId} {
      allow create: if isAuthenticated();
      
      // Leitura: Dono, Robô ou Destinatário (via CPF)
      allow read: if isRobot() || 
                  (isAuthenticated() && resource.data.notificante_uid == request.auth.uid) || 
                  isNotificationRecipient();

      // Escrita/Deleção: APENAS Dono ou Robô. Destinatário NÃO pode.
      allow update, delete: if isRobot() || 
                            (isAuthenticated() && resource.data.notificante_uid == request.auth.uid);
    }

    match /reunioes/{meetingId} {
      allow read, write: if isRobot() || isAuthenticated();
    }

    match /transactions/{transactionId} {
      allow read, write: if isRobot() || isAuthenticated();
    }

    match /files/{fileId} {
      allow read, write: if isRobot() || isAuthenticated();
    }
  }
}
